<?xml version="1.0" encoding="UTF-8"?>
<XMLDB PATH="mod/livesonner/db" VERSION="20240528" COMMENT="XMLDB file for LiveSonner module" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://docs.moodle.org/xsd/xmldb.xsd">
    <TABLES>
        <TABLE NAME="livesonner" COMMENT="Stores live class sessions">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
                <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Course ID"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Activity name"/>
                <FIELD NAME="intro" TYPE="text" NOTNULL="false" COMMENT="Intro content"/>
                <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" COMMENT="Format of the intro"/>
                <FIELD NAME="timestart" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Start time"/>
                <FIELD NAME="duration" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Duration in minutes"/>
                <FIELD NAME="meeturl" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Google Meet URL"/>
                <FIELD NAME="teacherid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Assigned teacher user ID"/>
                <FIELD NAME="recordingurl" TYPE="char" LENGTH="255" NOTNULL="false" COMMENT="YouTube recording URL"/>
                <FIELD NAME="isfinished" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="Flag when class finished"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Creation time"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Modification time"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="livesonner_attendance" COMMENT="Stores participation records">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
                <FIELD NAME="livesonnerid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Live class ID"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="User ID"/>
                <FIELD NAME="timeclicked" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Timestamp of participation"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="livesonnerid" TYPE="foreign" FIELDS="livesonnerid" REFTABLE="livesonner" REFFIELDS="id"/>
                <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="livesonner_user" UNIQUE="true" FIELDS="livesonnerid, userid"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="livesonner_enrolments" COMMENT="Stores dashboard registrations">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
                <FIELD NAME="livesonnerid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Live class ID"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="User ID"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Registration time"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="livesonnerid" TYPE="foreign" FIELDS="livesonnerid" REFTABLE="livesonner" REFFIELDS="id"/>
                <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="enrolment_lookup" UNIQUE="true" FIELDS="livesonnerid, userid"/>
                <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="livesonner_certificates" COMMENT="Stores certificates issued for finished live classes">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
                <FIELD NAME="livesonnerid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Live class ID"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="User ID"/>
                <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Certificate filename"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Issuance time"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Last update time"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="livesonnerid" TYPE="foreign" FIELDS="livesonnerid" REFTABLE="livesonner" REFFIELDS="id"/>
                <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="session_user" UNIQUE="true" FIELDS="livesonnerid, userid"/>
                <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid, timecreated"/>
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>
